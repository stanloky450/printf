#include <stdio.h>
#include "main.h"

int _printf(const char *format, ...) {
    va_list args;
    va_start(args, format);

    int count = 0; // Counter for characters printed

    while (*format) {
        if (*format == '%') {
            format++; // Move past '%'
            switch (*format) {
                case 'c':
                    // Character specifier
                    {
                        char character = va_arg(args, int);
                        putchar(character);
                        count++;
                        break;
                    }
                case 's':
                    // String specifier
                    {
                        char *str = va_arg(args, char *);
                        while (*str) {
                            putchar(*str);
                            str++;
                            count++;
                        }
                        break;
                    }
                case '%':
                    // Percent specifier
                    putchar('%');
                    count++;
                    break;
                default:
                    // Unsupported specifier, just print the character
                    putchar('%');
                    putchar(*format);
                    count += 2;
                    break;
            }
        } else {
            putchar(*format);
            count++;
        }
        format++;
    }

    va_end(args);
    return count;
}
